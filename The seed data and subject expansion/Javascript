// --- SUBJECT EXPANSION & SEED DATA ---

function seedDemoData() {
    const existingBoard = localStorage.getItem('nexusBoard');
    
    // Only seed if the board is empty
    if (!existingBoard) {
        const demoData = {
            'to-learn': [
                {id: 'seed-1', text: 'Stock Market: Dividends vs Growth'},
                {id: 'seed-2', text: 'Finance: Compound Interest Formula'},
                {id: 'seed-3', text: 'Taxes: Capital Gains Basics'},
                {id: 'seed-4', text: 'Insurance: Term vs Whole Life'}
            ],
            'in-progress': [],
            'mastered': []
        };
        localStorage.setItem('nexusBoard', JSON.stringify(demoData));
        loadBoard(); // Refresh the board view
    }
}

// Update the window.onload to include seeding
window.onload = () => {
    const profile = localStorage.getItem('nexusProfile');
    if (!profile) {
        document.getElementById('quiz-container').style.display = 'flex';
    } else {
        updateTimerDisplay();
        calibrateSystem(); // Re-apply role views
    }
    seedDemoData(); // Load the starter subjects
};
