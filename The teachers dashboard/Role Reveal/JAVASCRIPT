function calibrateSystem() {
    // ... existing quiz logic ...
    const role = document.getElementById('role-selector').value;
    
    // NEW: Toggle Teacher View
    const teacherDash = document.getElementById('teacher-dashboard');
    if (role === 'teacher') {
        teacherDash.style.display = 'block';
        document.querySelector('.kanban-board').style.opacity = '0.5'; // De-emphasize personal board
    } else {
        teacherDash.style.display = 'none';
        document.querySelector('.kanban-board').style.opacity = '1';
    }
    
    // ... rest of the logic ...
}
